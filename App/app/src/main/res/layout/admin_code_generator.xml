<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color2">


    <RelativeLayout
        android:id="@+id/textBoxes"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/adminInstructions"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Generate a single use Code to promote another user to admin, must be done on the user to be promoted's device through performing a hidden sequence of actions">

        </TextView>

        <TextView
            android:id="@+id/codeGenerated"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_below="@id/adminInstructions"
            android:layout_centerHorizontal="true"
            android:text="No Code"
            android:textAlignment="center"
            android:textSize="15sp">

        </TextView>


        <Button
            android:id="@+id/adminGenerateButton"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_below="@id/codeGenerated"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/lightBlue"
            android:text="Generate">

        </Button>
    </RelativeLayout>

</RelativeLayout>